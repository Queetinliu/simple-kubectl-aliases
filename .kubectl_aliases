# 参考https://github.com/ahmetb/kubectl-aliases/blob/master/.kubectl_aliases
alias k='kubectl'
alias kex='kubectl exec -i -t'
alias klo='kubectl logs -f'

alias kg='kubectl get'
alias kgpo='kubectl get pods'
alias kgpog='kubectl get pods|grep '
alias kgdep='kubectl get deployment'
alias kgdepg='kubectl get deployment|grep '
alias kgsts='kubectl get statefulset'
alias kgstsg='kubectl get statefulset|grep '
alias kgsvc='kubectl get service'
alias kgsvcg='kubectl get service|grep '
alias kgcm='kubectl get configmap'
alias kgcmg='kubectl get configmap|grep '
alias kging='kubectl get ingress'
alias kgingg='kubectl get ingress|grep '
alias kgno='kubectl get nodes'
alias kgrep='kubectl get replicasets'
alias kgrepg='kubectl get replicasets|grep '


alias kgya='kubectl get -o=yaml'
alias kgdepya='kubectl get deployment -o=yaml'
alias kgstsya='kubectl get statefulset -o=yaml'
alias kgsvcya='kubectl get service -o=yaml'
alias kgingya='kubectl get ingress -o=yaml'
alias kgcmya='kubectl get configmap -o=yaml'

alias kgowi='kubectl get -o=wide'
alias kgpowi='kubectl get pods -o=wide'
alias kgpowig='kubectl get pods -o=wide|grep '



alias kgsl='kubectl get --show-labels'
alias kgposl='kubectl get pods --show-labels'
alias kgdepsl='kubectl get deployment --show-labels'
alias kgsvcsl='kubectl get service --show-labels'
alias kgw='kubectl get --watch'
alias kgpow='kubectl get pods --watch'

alias kgpol='kubectl get pods -l'

alias kd='kubectl describe'
alias kdpo='kubectl describe pods'
alias kdsvc='kubectl describe service'
alias kding='kubectl describe ingress'
alias kdcm='kubectl describe configmap'

alias krm='kubectl delete'
alias krmpo='kubectl delete pods'
alias krmrep='kubectl delete replicasets'

# get container's resource request
alias kgresr='kubectl get deployment -o=jsonpath="{ range .spec.template.spec.containers[*]}{.name} {.resources.requests}{'\n'}{end}"'
# get container's resource limit
alias kgresl='kubectl get deployment -o=jsonpath="{ range .spec.template.spec.containers[*]}{.name} {.resources.limits}{'\n'}{end}"'
# get container's liveness
alias kglivepro='kubectl get deployment -o=jsonpath="{ range .spec.template.spec.containers[*]}{.name} {.livenessProbe}{'\n'}{end}"'
# get container's readiness
alias kgreadpro='kubectl get deployment -o=jsonpath="{ range .spec.template.spec.containers[*]}{.name} {.readinessProbe}{'\n'}{end}"'
# get container's startup
alias kgstartpro='kubectl get deployment -o=jsonpath="{ range .spec.template.spec.containers[*]}{.name} {.startupProbe}{'\n'}{end}"'

# get events sorted by last timestamp
alias kgel='kctl get events --sort-by=.lastTimestamp'
# get events sorted by creation timestamp
alias kgec='kctl get events --sort-by=.metadata.creationTimestamp'